                    <h1 class="page-title"><i class="fas fa-chart-bar"></i> Reportes y Estadísticas</h1>
                    
                    <div class="card">
                        <h2>Reporte de Servicios</h2>
                        <div class="report-grid">
                            <div class="chart-container">
                                <div class="chart-title">Servicios por Tipo</div>
                                <canvas id="services-chart"></canvas>
                            </div>
                            <div class="chart-container">
                                <div class="chart-title">Ingresos Mensuales</div>
                                <canvas id="income-chart"></canvas>
                            </div>
                        </div>
                    </div>
                    
                    <div class="card">
                        <h2>Reporte de Empleados</h2>
                        <div class="report-grid">
                            <div class="chart-container">
                                <div class="chart-title">Evaluación de Desempeño</div>
                                <canvas id="performance-chart"></canvas>
                            </div>
                            <div class="chart-container">
                                <div class="chart-title">Clientes por Empleado</div>
                                <canvas id="clients-per-employee-chart"></canvas>
                            </div>
                        </div>
                    </div>
                    
                    <div class="card">
                        <h2>Reporte de Reclamos</h2>
                        <div class="report-grid">
                            <div class="chart-container">
                                <div class="chart-title">Reclamos por Tipo</div>
                                <canvas id="claims-type-chart"></canvas>
                            </div>
                            <div class="chart-container">
                                <div class="chart-title">Reclamos por Mes</div>
                                <canvas id="claims-month-chart"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script>
        // Datos de ejemplo generados aleatoriamente
        const colors = ['Rojo', 'Azul', 'Negro', 'Blanco', 'Plateado', 'Verde', 'Gris'];
        const services = ['Lavado Básico', 'Lavado Premium', 'Aspirado', 'Encerado', 'Pulido'];
        const belongings = ['Ninguna', 'Llaves en contacto', 'Maleta en baúl', 'Documentos en guantera', 'Equipo de audio'];
        
        // Generar clientes aleatorios
        const clients = Array.from({length: 15}, (_, i) => ({
            id: i + 1,
            name: ['Luis', 'Mayra', 'Jhefer', 'Carlos', 'Ana', 'Pedro', 'María'][Math.floor(Math.random() * 7)],
            phone: Math.floor(6000000 + Math.random() * 4000000).toString(),
            plate: `${String.fromCharCode(65 + Math.floor(Math.random() * 26))}${String.fromCharCode(65 + Math.floor(Math.random() * 26))}${String.fromCharCode(65 + Math.floor(Math.random() * 26))}${Math.floor(100 + Math.random() * 900)}`,
            color: colors[Math.floor(Math.random() * colors.length)],
            belongings: belongings[Math.floor(Math.random() * belongings.length)],
            service: services[Math.floor(Math.random() * services.length)],
            date: new Date(Date.now() - Math.floor(Math.random() * 30 * 24 * 60 * 60 * 1000)),
            employee: Math.floor(Math.random() * 5) + 1
        }));

        // Generar empleados aleatorios
        const employees = Array.from({length: 5}, (_, i) => ({
            id: i + 1,
            name: ['Juan', 'Eugenio', 'Aurelio', 'Adriana', 'Vivian'][i],
            position: ['Supervisor', 'Técnico', 'Operador', 'Asistente', 'Gerente'][i],
            rating: null,
            services: Math.floor(Math.random() * 20) + 5
        }));

        // Ofertas predefinidas
        const offers = [
            {
                title: "-50% en tu sexto lavado",
                description: "Descuento especial para clientes frecuentes en su sexto servicio.",
                discount: "-50%",
                tag: ""
            },
            {
                title: "2X1 los jueves",
                description: "Promoción especial todos los jueves: paga un lavado y lleva dos.",
                discount: "2X1",
                tag: "POPULAR"
            },
            {
                title: "Limpieza expresa -25%",
                description: "Descuento en nuestro servicio rápido de limpieza exterior.",
                discount: "-25%",
                tag: ""
            },
            {
                title: "Primer lavado GRATIS",
                description: "Promoción de bienvenida para nuevos clientes.",
                discount: "GRATIS",
                tag: "NUEVO"
            },
            {
                title: "Tarjeta de cliente frecuente",
                description: "Acumula puntos y obtén beneficios exclusivos.",
                discount: "Beneficios",
                tag: ""
            }
        ];

        // Reclamos de ejemplo
        const claims = [
            {
                id: 1,
                name: "Luis M.",
                email: "luis@gmail.com",
                type: "servicio",
                details: "El lavado no eliminó todas las manchas del vehículo",
                date: "2023-06-15",
                status: "pendiente"
            },
            {
                id: 2,
                name: "Ana R.",
                email: "ana@gmail.com",
                type: "empleado",
                details: "El empleado fue grosero durante el servicio",
                date: "2023-06-14",
                status: "en proceso"
            },
            {
                id: 3,
                name: "Carlos P.",
                email: "carlos@gmail.com",
                type: "vehiculo",
                details: "Se rayó la pintura durante el lavado",
                date: "2023-06-12",
                status: "resuelto"
            }
        ];

        // Estado de la aplicación
        let currentUser = null;
        let currentClientId = null;
        let charts = {};

        // DOM Elements
        const loginScreen = document.getElementById('login-screen');
        const app = document.getElementById('app');
        const loginForm = document.getElementById('login-form');
        const logoutBtn = document.getElementById('logout-btn');
        const menuLinks = document.querySelectorAll('.sidebar-menu a');
        const pages = document.querySelectorAll('.page');
        
        // Dashboard
        const totalClientsEl = document.getElementById('total-clients');
        const totalServicesEl = document.getElementById('total-services');
        const totalIncomeEl = document.getElementById('total-income');
        const totalEmployeesEl = document.getElementById('total-employees');
        const recentClientsEl = document.getElementById('recent-clients');
        
        // Clientes
        const clientListEl = document.getElementById('client-list');
        const clientForm = document.getElementById('client-form');
        const newClientBtn = document.getElementById('new-client-btn');
        const saveClientBtn = document.getElementById('save-client');
        const clearFormBtn = document.getElementById('clear-form');
        const deleteClientBtn = document.getElementById('delete-client');
        const backToListBtn = document.getElementById('back-to-list');
        
        // Empleados
        const employeeListEl = document.getElementById('employee-list');
        const evaluationProgressEl = document.getElementById('evaluation-progress');
        const submitEvaluationsBtn = document.getElementById('submit-evaluations');
        
        // Ofertas
        const offersListEl = document.getElementById('offers-list');
        const newOfferBtn = document.getElementById('new-offer-btn');
        const offerForm = document.getElementById('offer-form');
        const saveOfferBtn = document.getElementById('save-offer');
        const cancelOfferBtn = document.getElementById('cancel-offer');
        
        // Reclamos
        const claimForm = document.getElementById('claim-form');
        const submitClaimBtn = document.getElementById('submit-claim');
        const clearClaimBtn = document.getElementById('clear-claim');
        const claimsListEl = document.getElementById('claims-list');

        // Inicialización
        document.addEventListener('DOMContentLoaded', function() {
            // Event Listeners
            loginForm.addEventListener('submit', handleLogin);
            logoutBtn.addEventListener('click', handleLogout);
            
            // Menu navigation
            menuLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    navigateTo(this.dataset.page);
                    
                    // Update active state
                    menuLinks.forEach(l => l.classList.remove('active'));
                    this.classList.add('active');
                });
            });
            
            // Clientes events
            newClientBtn.addEventListener('click', showNewClientForm);
            saveClientBtn.addEventListener('click', saveClient);
            clearFormBtn.addEventListener('click', clearClientForm);
            deleteClientBtn.addEventListener('click', deleteClient);
            backToListBtn.addEventListener('click', showClientList);
            
            // Empleados events
            submitEvaluationsBtn.addEventListener('click', submitEvaluations);
            
            // Ofertas events
            newOfferBtn.addEventListener('click', showOfferForm);
            saveOfferBtn.addEventListener('click', saveOffer);
            cancelOfferBtn.addEventListener('click', hideOfferForm);
            
            // Reclamos events
            submitClaimBtn.addEventListener('click', submitClaim);
            clearClaimBtn.addEventListener('click', clearClaimForm);
            
            // Inicializar datos
            updateDashboard();
            renderClientList();
            renderEmployeeList();
            renderOffersList();
            renderClaimsList();
        });

        // Handlers
        function handleLogin(e) {
            e.preventDefault();
            
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;
            
            // Simular login
            if (username && password) {
                currentUser = {
                    name: username,
                    role: 'admin'
                };
                
                // Mostrar aplicación
                loginScreen.style.display = 'none';
                app.style.display = 'block';
                
                // Set user info
                document.getElementById('current-user').textContent = currentUser.name;
                
                // Mostrar dashboard por defecto
                navigateTo('dashboard');
            } else {
                alert('Por favor ingrese usuario y contraseña');
            }
        }

        function handleLogout() {
            // Reset form
            loginForm.reset();
            
            // Mostrar pantalla de login
            loginScreen.style.display = 'flex';
            app.style.display = 'none';
            
            // Reset current user
            currentUser = null;
        }

        function navigateTo(page) {
            // Ocultar todas las páginas
            pages.forEach(p => p.style.display = 'none');
            
            // Mostrar página seleccionada
            document.getElementById(`${page}-page`).style.display = 'block';
            
            // Actualizar título
            document.title = `WashManager - ${page.charAt(0).toUpperCase() + page.slice(1)}`;
            
            // Si es la página de reportes, actualizar gráficos
            if (page === 'reportes') {
                updateCharts();
            }
        }

        // Funciones del Dashboard
        function updateDashboard() {
            // Actualizar estadísticas
            totalClientsEl.textContent = clients.length;
            totalServicesEl.textContent = clients.length;
            totalIncomeEl.textContent = `$${(clients.length * 25).toLocaleString()}`;
            totalEmployeesEl.textContent = employees.length;
            
            // Mostrar clientes recientes (últimos 5)
            const recentClients = [...clients]
                .sort((a, b) => b.date - a.date)
                .slice(0, 5);
            
            recentClientsEl.innerHTML = '';
            recentClients.forEach(client => {
                const clientItem = document.createElement('div');
                clientItem.className = 'client-item';
                clientItem.innerHTML = `
                    <strong>${client.name}</strong> (${client.phone})<br>
                    <small>${client.service} - ${client.date.toLocaleDateString()}</small>
                `;
                recentClientsEl.appendChild(clientItem);
            });
        }

        // Funciones de Clientes (mantenidas igual que antes)
        function renderClientList() {
            clientListEl.innerHTML = '';
            clients.forEach(client => {
                const clientItem = document.createElement('div');
                clientItem.className = 'client-item';
                clientItem.dataset.id = client.id;
                clientItem.innerHTML = `
                    <strong>${client.name}</strong> (${client.phone})<br>
                    <small>${client.plate} - ${client.color}</small>
                `;
                clientItem.addEventListener('click', () => loadClientData(client.id));
                clientListEl.appendChild(clientItem);
            });
        }

        function loadClientData(clientId) {
            const client = clients.find(c => c.id === clientId);
            if (!client) return;
            
            currentClientId = client.id;
            document.getElementById('client-name').value = client.name;
            document.getElementById('client-phone').value = client.phone;
            document.getElementById('client-plate').value = client.plate;
            document.getElementById('client-color').value = client.color;
            document.getElementById('client-belongings').value = client.belongings;
            
            showClientForm();
        }

        function showNewClientForm() {
            currentClientId = null;
            clearClientForm();
            showClientForm();
        }

        function showClientForm() {
            clientListEl.style.display = 'none';
            newClientBtn.style.display = 'none';
            clientForm.style.display = 'grid';
        }

        function showClientList() {
            clientListEl.style.display = 'block';
            newClientBtn.style.display = 'block';
            clientForm.style.display = 'none';
        }

        function clearClientForm() {
            document.getElementById('client-form').reset();
            currentClientId = null;
        }

        function saveClient() {
            const clientData = {
                name: document.getElementById('client-name').value,
                phone: document.getElementById('client-phone').value,
                plate: document.getElementById('client-plate').value,
                color: document.getElementById('client-color').value,
                belongings: document.getElementById('client-belongings').value,
                service: services[Math.floor(Math.random() * services.length)],
                date: new Date(),
                employee: Math.floor(Math.random() * 5) + 1
            };
            
            if (!clientData.name || !clientData.phone) {
                alert('Nombre y teléfono son requeridos');
                return;
            }
            
            if (currentClientId) {
                // Actualizar cliente existente
                const index = clients.findIndex(c => c.id === currentClientId);
                if (index !== -1) {
                    clients[index] = { ...clients[index], ...clientData };
                }
            } else {
                // Crear nuevo cliente
                const newId = clients.length > 0 ? Math.max(...clients.map(c => c.id)) + 1 : 1;
                clients.push({ id: newId, ...clientData });
                currentClientId = newId;
            }
            
            // Actualizar lista y dashboard
            renderClientList();
            updateDashboard();
            alert('Cliente guardado exitosamente');
            showClientList();
        }

        function deleteClient() {
            if (!currentClientId) return;
            
            if (confirm('¿Está seguro de eliminar este cliente?')) {
                const index = clients.findIndex(c => c.id === currentClientId);
                if (index !== -1) {
                    clients.splice(index, 1);
                    renderClientList();
                    updateDashboard();
                    clearClientForm();
                    showClientList();
                    alert('Cliente eliminado');
                }
            }
        }

        // Funciones de Empleados (mantenidas igual que antes)
        function renderEmployeeList() {
            employeeListEl.innerHTML = '';
            employees.forEach(employee => {
                const employeeCard = document.createElement('div');
                employeeCard.className = 'employee-card';
                employeeCard.innerHTML = `
                    <div class="employee-header">
                        <div class="employee-name">${employee.name} - ${employee.position}</div>
                        <div>${employee.rating ? `Calificación: ${employee.rating}` : 'Sin calificar'}</div>
                    </div>
                    <div class="rating-buttons">
                        ${[1, 2, 3, 4, 5].map(score => `
                            <div class="rating-btn ${employee.rating === score ? 'active' : ''}" 
                                 data-id="${employee.id}" 
                                 data-score="${score}"
                                 onclick="rateEmployee(this, ${employee.id}, ${score})">
                                ${score}
                            </div>
                        `).join('')}
                    </div>
                `;
                employeeListEl.appendChild(employeeCard);
            });
            updateEvaluationProgress();
        }

        function rateEmployee(element, employeeId, score) {
            const employee = employees.find(e => e.id === employeeId);
            if (!employee) return;
            
            // Actualizar calificación
            employee.rating = score;
            
            // Actualizar UI
            const buttons = element.parentElement.querySelectorAll('.rating-btn');
            buttons.forEach(btn => btn.classList.remove('active'));
            element.classList.add('active');
            
            // Actualizar progreso
            updateEvaluationProgress();
        }

        function updateEvaluationProgress() {
            const ratedEmployees = employees.filter(e => e.rating !== null).length;
            const progress = Math.round((ratedEmployees / employees.length) * 100);
            evaluationProgressEl.textContent = `${progress}%`;
        }

        function submitEvaluations() {
            const unratedEmployees = employees.filter(e => e.rating === null);
            if (unratedEmployees.length > 0) {
                alert('Por favor califique a todos los empleados antes de enviar.');
                return;
            }
            
            // En una aplicación real, aquí enviaríamos los datos al servidor
            console.log('Evaluaciones enviadas:', employees);
            alert('Evaluaciones enviadas correctamente!');
            
            // Actualizar gráficos
            updateCharts();
        }

        // Funciones de Ofertas
        function renderOffersList() {
            offersListEl.innerHTML = '';
            offers.forEach((offer, index) => {
                const offerCard = document.createElement('div');
                offerCard.className = 'offer-card';
                offerCard.innerHTML = `
                    ${offer.tag ? `<div class="offer-tag">${offer.tag}</div>` : ''}
                    <h3>${offer.title}</h3>
                    <p>${offer.description}</p>
                    <button class="btn btn-primary">Aplicar</button>
                `;
                offersListEl.appendChild(offerCard);
            });
        }

        function showOfferForm() {
            offerForm.style.display = 'block';
            newOfferBtn.style.display = 'none';
        }

        function hideOfferForm() {
            offerForm.style.display = 'none';
            newOfferBtn.style.display = 'block';
            document.getElementById('offer-form').reset();
        }

        function saveOffer() {
            const offerData = {
                title: document.getElementById('offer-title').value,
                description: document.getElementById('offer-description').value,
                discount: document.getElementById('offer-discount').value,
                tag: document.getElementById('offer-tag').value
            };
            
            if (!offerData.title || !offerData.description || !offerData.discount) {
                alert('Por favor complete todos los campos requeridos');
                return;
            }
            
            // Agregar nueva oferta
            offers.push(offerData);
            
            // Actualizar lista y UI
            renderOffersList();
            hideOfferForm();
            alert('Oferta guardada exitosamente');
        }

        // Funciones de Reclamos
        function renderClaimsList() {
            claimsListEl.innerHTML = '';
            claims.forEach(claim => {
                const claimItem = document.createElement('div');
                claimItem.className = 'claim-item';
                claimItem.innerHTML = `
                    <strong>${claim.name}</strong>
                    <span>${getClaimType(claim.type)}</span>
                    <small>${claim.date}</small>
                    <button class="btn btn-primary btn-sm" onclick="viewClaimDetail(${claim.id})">Ver Detalle</button>
                `;
                claimsListEl.appendChild(claimItem);
            });
        }

        function getClaimType(type) {
            const types = {
                'servicio': 'Calidad del Servicio',
                'empleado': 'Atención del Empleado',
                'facturacion': 'Problema de Facturación',
                'vehiculo': 'Daño al Vehículo',
                'otro': 'Otro'
            };
            return types[type] || type;
        }

        function viewClaimDetail(claimId) {
            const claim = claims.find(c => c.id === claimId);
            if (!claim) return;
            
            alert(`Detalle del Reclamo #${claim.id}\n\nNombre: ${claim.name}\nTipo: ${getClaimType(claim.type)}\nFecha: ${claim.date}\nEstado: ${claim.status}\n\nDetalles:\n${claim.details}`);
        }

        function submitClaim() {
            const claimData = {
                name: document.getElementById('claim-name').value,
                email: document.getElementById('claim-email').value,
                type: document.getElementById('claim-type').value,
                details: document.getElementById('claim-details').value,
                notify: document.getElementById('claim-notify').checked,
                date: new Date().toISOString().split('T')[0],
                status: 'pendiente'
            };
            
            if (!claimData.name || !claimData.email || !claimData.type || !claimData.details) {
                alert('Por favor complete todos los campos requeridos');
                return;
            }
            
            // Agregar nuevo reclamo
            const newId = claims.length > 0 ? Math.max(...claims.map(c => c.id)) + 1 : 1;
            claims.push({ id: newId, ...claimData });
            
            // Actualizar lista y UI
            renderClaimsList();
            clearClaimForm();
            alert('Reclamo enviado correctamente. Nos contactaremos pronto.');
        }

        function clearClaimForm() {
            document.getElementById('claim-form').reset();
        }

        // Funciones de Reportes
        function updateCharts() {
            // Destruir gráficos existentes
            Object.values(charts).forEach(chart => {
                if (chart) chart.destroy();
            });
            
            // Gráfico de servicios por tipo
            const servicesCount = {};
            services.forEach(service => {
                servicesCount[service] = clients.filter(c => c.service === service).length;
            });
            
            const servicesCtx = document.getElementById('services-chart').getContext('2d');
            charts.servicesChart = new Chart(servicesCtx, {
                type: 'pie',
                data: {
                    labels: Object.keys(servicesCount),
                    datasets: [{
                        data: Object.values(servicesCount),
                        backgroundColor: [
                            '#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0', '#9966FF'
                        ]
                    }]
                }
            });
            
            // Gráfico de ingresos mensuales
            const monthlyIncome = Array(12).fill(0);
            clients.forEach(client => {
                const month = client.date.getMonth();
                monthlyIncome[month] += 25; // $25 por servicio
            });
            
            const incomeCtx = document.getElementById('income-chart').getContext('2d');
            charts.incomeChart = new Chart(incomeCtx, {
                type: 'line',
                data: {
                    labels: ['Ene', 'Feb', 'Mar', 'Abr', 'May', 'Jun', 'Jul', 'Ago', 'Sep', 'Oct', 'Nov', 'Dic'],
                    datasets: [{
                        label: 'Ingresos ($)',
                        data: monthlyIncome,
                        borderColor: '#4BC0C0',
                        fill: false
                    }]
                }
            });
            
            // Gráfico de evaluación de desempeño
            const performanceCtx = document.getElementById('performance-chart').getContext('2d');
            charts.performanceChart = new Chart(performanceCtx, {
                type: 'bar',
                data: {
                    labels: employees.map(e => e.name),
                    datasets: [{
                        label: 'Calificación',
                        data: employees.map(e => e.rating || 0),
                        backgroundColor: '#36A2EB'
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true,
                            max: 5
                        }
                    }
                }
            });
            
            // Gráfico de clientes por empleado
            const clientsPerEmployee = employees.map(employee => {
                return clients.filter(c => c.employee === employee.id).length;
            });
            
            const clientsPerEmployeeCtx = document.getElementById('clients-per-employee-chart').getContext('2d');
            charts.clientsPerEmployeeChart = new Chart(clientsPerEmployeeCtx, {
                type: 'bar',
                data: {
                    labels: employees.map(e => e.name),
                    datasets: [{
                        label: 'Clientes atendidos',
                        data: clientsPerEmployee,
                        backgroundColor: '#FFCE56'
                    }]
                }
            });
            
            // Gráfico de reclamos por tipo
            const claimsByType = {
                'servicio': claims.filter(c => c.type === 'servicio').length,
                'empleado': claims.filter(c => c.type === 'empleado').length,
                'facturacion': claims.filter(c => c.type === 'facturacion').length,
                'vehiculo': claims.filter(c => c.type === 'vehiculo').length,
                'otro': claims.filter(c => c.type === 'otro').length
            };
            
            const claimsTypeCtx = document.getElementById('claims-type-chart').getContext('2d');
            charts.claimsTypeChart = new Chart(claimsTypeCtx, {
                type: 'doughnut',
                data: {
                    labels: Object.keys(claimsByType).map(getClaimType),
                    datasets: [{
                        data: Object.values(claimsByType),
                        backgroundColor: [
                            '#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0', '#9966FF'
                        ]
                    }]
                }
            });
            
            // Gráfico de reclamos por mes (ejemplo con datos aleatorios)
            const claimsByMonth = Array(12).fill(0).map(() => Math.floor(Math.random() * 10));
            const claimsMonthCtx = document.getElementById('claims-month-chart').getContext('2d');
            charts.claimsMonthChart = new Chart(claimsMonthCtx, {
                type: 'bar',
                data: {
                    labels: ['Ene', 'Feb', 'Mar', 'Abr', 'May', 'Jun', 'Jul', 'Ago', 'Sep', 'Oct', 'Nov', 'Dic'],
                    datasets: [{
                        label: 'Reclamos',
                        data: claimsByMonth,
                        backgroundColor: '#9b59b6'
                    }]
                }
            });
        }
    </script>
</body>
</html>
